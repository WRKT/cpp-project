stages:
  - build
  - test

before_script:
  - apt-get update -qq
  - apt-get install -y --no-install-recommends qtbase5-dev cmake build-essential
  - apt-get clean
  - rm -rf /var/lib/apt/lists/*

build:
  stage: build
  image: ubuntu:22.04
  script:
    - mkdir build
    - cd build
    - cmake ../PROJET/
    - cmake --build .
  artifacts:
    paths:
      - build

test:
  stage: test
  image: ubuntu:22.04
  script:
    - GTEST_COLOR=1 ctest --test-dir build --output-on-failure -j12
  artifacts:
    paths:
      - build
  dependencies:
    - build
