# Compilateur
C++ = g++
C++FLAGS = -std=c++11 -Wall

# Dossier source
SRC_DIR = sources

# Tous les fichiers sources dans src_dir
SRCS = $(wildcard $(SRC_DIR)/*.cpp)

# Nom de l'ex√©cutable
BIN = td1_winness

.PHONY: all clean

all:
	$(C++) $(C++FLAGS) -o $(BIN) $(SRCS)
clean:
	rm -f $(BIN)